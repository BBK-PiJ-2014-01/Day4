class Integer2 {
	int value;

	int getValue() {
		return(value);
	}

	void setValue(int value) {
		this.value = value;
	}

	boolean isEven() {
		boolean even = false;
		if (value % 2 == 0)
			even = true;
		return(even);
	}

	boolean isOdd() {
		boolean odd = false;
		if (value % 2 == 1)
			odd = true;
		return(odd);
	}

	void prettyPrint() {
		println(value);
	}

	String toString2() {
		String output = "";
		output = output + value;
		return(output);
	}
}